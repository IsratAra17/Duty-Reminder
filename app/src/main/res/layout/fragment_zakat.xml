<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
android:weightSum="5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


android:orientation="vertical"
    tools:context=".Zakat.ZakatFragment">


    <!-- TODO: Update blank fragment layout -->
    <androidx.cardview.widget.CardView


        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:layout_weight="1.5"
        app:cardMaxElevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout


android:weightSum="6"
        android:layout_margin="6dp"
        android:orientation="vertical"
      android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
android:textSize="18sp"

            android:inputType="numberDecimal"
            android:layout_weight="1"
            android:id="@+id/priceGold"
            android:hint="বর্তমান ১ গ্রাম স্বর্ণের মূল্য"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:textSize="18sp"
            android:inputType="numberDecimal"
            android:layout_weight="1"
            android:id="@+id/priceSilver"
            android:hint="বর্তমান ১ গ্রাম রুপার মূল্য (মূল্য পরিবর্তনশীল)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:textSize="18sp"
            android:inputType="numberDecimal"
            android:layout_weight="1"
            android:id="@+id/cash"
            android:hint="আপনার কাছে নগদ টাকা"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:textSize="18sp"
            android:inputType="numberDecimal"
            android:layout_weight="1"
            android:id="@+id/userGold"
            android:hint="আপনার কাছে কত গ্রাম স্বর্ণ আছে ?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:textSize="18sp"
            android:inputType="numberDecimal"
            android:layout_weight="1"
            android:id="@+id/usersilver"
            android:hint="আপনার কাছে কত গ্রাম রুপা আছে?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
android:elevation="4dp"
            android:layout_marginBottom="1dp"
            android:padding="2dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:id="@+id/btcalculate"
            android:text="@string/hisab"
            android:textSize="15sp"
            android:textColor="#006804"
            />

    </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
       android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
android:layout_weight="1.5"
        app:cardMaxElevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
android:background="@drawable/splash_color"
android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      android:padding="3dp"

        android:weightSum="4">
        <TextView

android:textColor="@color/black"
            android:layout_weight="1"

            android:id="@+id/goldText"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:layout_marginTop="2dp"
            />
        <TextView
            android:paddingLeft="2dp"
            android:textColor="@color/black"
            android:layout_marginTop="2dp"

            android:layout_weight="1"
            android:id="@+id/silverText"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/black"
            android:paddingLeft="2dp"
android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:id="@+id/CashText"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_margin="3dp"
            android:layout_gravity="bottom"

            android:padding="3dp"
            android:layout_weight="1"
            android:id="@+id/ZakatText"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    </androidx.cardview.widget.CardView>
<LinearLayout
    android:orientation="vertical"
    android:layout_weight="2.3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#005704"
        android:id="@+id/btclear"
        android:elevation="4dp"
        android:backgroundTint="@color/white"
        android:text="reset"
        >

    </Button>
</LinearLayout>


</LinearLayout>