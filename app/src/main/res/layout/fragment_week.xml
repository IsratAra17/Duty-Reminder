<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/weekfragm"
    android:layout_height="match_parent"
    tools:context=".ui.Week.WeekFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash_color"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="3">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:orientation="horizontal"
            android:weightSum="2">


            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="1"

                android:background="#D3B3FA"


                android:backgroundTint="#F5EBF6">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/week_siam"
                    android:textColor="@color/black"
                    android:textSize="20sp">

                </TextView>

                <ImageButton
                    android:id="@+id/ibt_siam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"


                    android:backgroundTint="#FFFFFF"
                    android:scaleType="fitXY"
                    android:src="@drawable/fasting"

                    android:text="@string/week_siam"
                    android:textColor="#004C03"
                    android:textSize="20sp">

                </ImageButton>

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"

                android:layout_weight="1"
                android:background="#DBBEFF"

                android:backgroundTint="#F5EBF6">

                <TextView


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/others"
                    android:textColor="@color/black"
                    android:textSize="20sp">

                </TextView>

                <ImageButton
                    android:id="@+id/ibt_weekExtra"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"

                    android:background="@color/white"

                    android:scaleType="fitCenter"
                    android:src="@drawable/prayer"

                    android:text="@string/week_siam"
                    android:textColor="#004C03"
                    android:textSize="20sp">

                </ImageButton>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>